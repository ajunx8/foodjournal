<h1><%= @tag.name %></h1>

<div class="your-foods">
    <% @tag.foods_for_user(@current_user.id).each do |food| %>
        <div>
            <p>
                <%= link_to food.name, food_path(food.id) %>
            </p>
        </div>
    <% end %>
</div>

<%= link_to 'back', tags_path %>
<%= link_to 'delete tag', tag_path(@tag), :method => :delete, :data => { :confirm => 'Are you sure?' }%>